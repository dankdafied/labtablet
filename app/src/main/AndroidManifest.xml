<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.up.fe.labtablet" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_LOGS"/>

    <application
        android:allowBackup="true"
        android:screenOrientation="portrait"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme"
        android:name="pt.up.fe.labtablet.application.LabTablet"
        android:versionCode="16"
        android:versionName="Ricardo"
        >

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Google Analytics Version v4 needs this value for easy tracking -->
        <meta-data android:name="com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/app_tracker" />

        <activity
            android:name="pt.up.fe.labtablet.activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.DescriptorPickerActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_descriptor_picker" >
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.FieldModeActivity"
            android:label="@string/title_activity_field_mode"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.FingerPaintActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_finger_paint" >
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.ValidateMetadataActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_validate_metadata"
            android:parentActivityName="pt.up.fe.labtablet.activities.FieldModeActivity"
             >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.up.fe.labtablet.activities.FieldModeActivity" />
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.SubmissionValidationActivity"
            android:label="@string/title_activity_submission_validation"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.FormQuestionCreatorActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_form_question_creator"
            >
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.FormSolverActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_form_question_creator"
            >
        </activity>
        <activity
            android:name="pt.up.fe.labtablet.activities.ItemPreviewActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_item_preview"
            >
        </activity>
    </application>

</manifest>
