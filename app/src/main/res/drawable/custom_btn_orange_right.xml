<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="15dip" android:radius="1dp" android:topLeftRadius="0dip" android:topRightRadius="15dip" />

            <stroke android:width="1dip" android:color="#c53e2b" />
            <gradient android:angle="-90" android:endColor="#d62608" android:startColor="#a11005" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="15dip" android:radius="1dp" android:topLeftRadius="0dip" android:topRightRadius="15dip" />

            <stroke android:width="1dip" android:color="#c53e2b" />
            <gradient android:angle="-90" android:endColor="#d62608" android:startColor="#a11005" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="15dip" android:radius="1dp" android:topLeftRadius="0dip" android:topRightRadius="15dip" />

            <stroke android:width="1dip" android:color="#b7b9ac" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="15dip" android:radius="1dp" android:topLeftRadius="0dip" android:topRightRadius="15dip" />

            <stroke android:width="1dip" android:color="#c53e2b" />
            <solid android:color="#e0341e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dip" android:bottomRightRadius="15dip" android:radius="1dp" android:topLeftRadius="0dip" android:topRightRadius="15dip" />
            <stroke android:width="1dip" android:color="#c53e2b" />
            <solid android:color="#e0341e" />
        </shape>
    </item>
</selector>
