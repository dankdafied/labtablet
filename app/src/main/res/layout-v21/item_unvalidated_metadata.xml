<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5sp"
    android:layout_margin="10dp"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_metadata_preview"
            android:contentDescription="@string/image_placeholder"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_metadata" />

        <ImageButton
            android:id="@+id/bt_delete_unvalidated_metadata"
            android:contentDescription="@string/image_placeholder"
            style="@android:style/Widget.Material.Light.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_recycle" />

        <ImageButton
            android:id="@+id/bt_make_it_data"
            style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:contentDescription="@string/image_placeholder"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/bt_delete_unvalidated_metadata"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_database" />

        <TextView
            android:id="@+id/unvalidated_meta_value"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/iv_metadata_preview"
            android:layout_toStartOf="@id/bt_delete_unvalidated_metadata"
            android:ellipsize="end"
            android:text="Value"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unvalidated_meta_extension"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:textColor="@color/second_grey"
            android:layout_below="@id/unvalidated_meta_value"
            android:layout_gravity="fill_horizontal"
            android:layout_toEndOf="@id/iv_metadata_preview"
            android:layout_toStartOf="@id/bt_delete_unvalidated_metadata"
            android:ellipsize="end"
            android:text="Extension"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/unvalidated_meta_descriptor_name"
            android:textColor="@color/second_grey"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/unvalidated_meta_extension"
            android:layout_toEndOf="@id/iv_metadata_preview"
            android:layout_toStartOf="@id/bt_delete_unvalidated_metadata"
            android:ellipsize="start"
            android:text="Coverage"
            android:textAppearance="@android:style/TextAppearance.Medium"

            />

        <TextView
            android:id="@+id/unvalidated_meta_descriptor_uri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/unvalidated_meta_descriptor_name"
            android:layout_marginStart="20dp"
            android:layout_toStartOf="@id/bt_make_it_data"
            android:textColor="@color/second_grey"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="http://www.google.com/this/that.xpto"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <View
            android:id="@+id/unvalidated_meta_separator"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/unvalidated_meta_descriptor_uri"
            android:layout_marginTop="25dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unvalidated_meta_separator">

            <Button
                android:id="@+id/bt_edit_unvalidated_metadata"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Descriptor" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/bt_edit_unvalidated_metadata_value"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="0dp"
                android:text="Edit Value" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>