<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="8dp"
    android:elevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/tip_drawable"
            android:tintMode="screen"
            android:tint="@color/primary_translucent_tip"
            android:src="@drawable/sensors"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:maxHeight="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/tip_header"
            android:layout_alignParentTop="true"
            android:text="Header"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@color/primary_translucent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tip_body"
            android:layout_below="@id/tip_drawable"
            android:text="Body Body Body"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif-thin"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>