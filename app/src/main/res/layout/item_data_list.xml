<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    >

    <ImageButton
        android:id="@+id/bt_remove_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
        android:src="@drawable/ic_recycle"
        />

    <ImageView
        android:id="@+id/metadata_item_type"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="6dip"
        android:src="@drawable/ic_file" />

    <TextView
        android:id="@+id/metadata_item_title"
        android:layout_toStartOf="@id/bt_remove_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/metadata_item_type"
        android:ellipsize="start"
        android:text="File name value"
        android:textAppearance="@android:style/TextAppearance.Medium"
        />

    <TextView
        android:id="@+id/metadata_item_description"
        android:layout_below="@id/metadata_item_title"
        android:layout_toStartOf="@id/bt_remove_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/metadata_item_type"
        android:ellipsize="start"
        android:text="File description"
        android:visibility="visible"
        android:textColor="@color/second_grey"
        android:textSize="16sp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        />

    <TextView
        android:id="@+id/metadata_item_value"
        android:layout_toStartOf="@id/bt_remove_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/metadata_item_description"
        android:layout_toEndOf="@id/metadata_item_type"
        android:ellipsize="start"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="@color/second_grey"
        android:text="mime type"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/metadata_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/bt_remove_file"
        android:layout_below="@id/metadata_item_value"
        android:layout_toEndOf="@id/metadata_item_type"
        android:ellipsize="start"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:text="16MB"
        android:textColor="@color/second_grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/metadata_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/metadata_item_size"
        android:layout_toEndOf="@id/metadata_item_type"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxWidth="200dp"
        android:text="2009/12/2"
        android:textColor="@color/second_grey" />

</RelativeLayout>
