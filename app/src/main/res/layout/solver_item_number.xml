<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/solver_question_status"
        android:contentDescription="@string/image_placeholder"
        android:visibility="invisible"
        android:src="@drawable/ic_warning"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/solver_question_body"
        android:layout_toStartOf="@id/solver_question_status"
        android:layout_toLeftOf="@id/solver_question_status"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question body goes here"
        android:textSize="20sp"
        />

    <NumberPicker
        android:id="@+id/solver_question_number_picker"
        android:layout_marginTop="15dp"
        android:layout_below="@id/solver_question_body"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
</RelativeLayout>
