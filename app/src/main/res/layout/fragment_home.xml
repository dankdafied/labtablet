<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:animateLayoutChanges="true"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home"
            android:typeface="serif"
            android:textSize="80sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/primary"
            />

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_feature_1"
                >
                <TextView
                    android:layout_alignParentTop="true"
                    android:padding="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/collect_metadata_available_sensors"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:drawableStart="@drawable/ic_people"
                    android:drawablePadding="15dp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_feature_2"
                >
                <TextView

                    android:padding="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/easily_manage"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:drawableStart="@drawable/ic_communities"
                    android:drawablePadding="15dp"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView

                    android:padding="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_and_make_accessible"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:drawableStart="@drawable/ic_home"
                    android:drawablePadding="15dp"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_profile_state"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/no_profile"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_project_state"
                    android:text="@string/no_projects"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    />
            </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/home_bt_configurations"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:text="@string/open_configurations"
                android:drawableStart="@drawable/ab_pulse"
                android:textAllCaps="true"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/home_bt_create_project"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:text="@string/new_project"
                android:textAllCaps="true"
                android:drawableStart="@drawable/ab_plus"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/bt_home_list_projects"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                android:text="@string/my_projects"
                android:drawableStart="@drawable/ab_box"
                android:textAllCaps="true"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/rl_metadata_quality_card">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:id="@+id/rl_metadata_quality"
                >
                <ProgressBar
                    android:id="@+id/pb_generic_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv_metadata_state"
                    android:contentDescription="@string/image_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/tv_metadata_state"
                    android:padding="3dp"
                    android:layout_toEndOf="@id/iv_metadata_state"
                    android:text="@string/metadata_meh"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:text="@string/swipe_to_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_swipe_right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/second_grey"
            />

    </LinearLayout>

</ScrollView>