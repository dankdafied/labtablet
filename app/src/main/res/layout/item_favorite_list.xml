<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:hapticFeedbackEnabled="true"
    android:layout_height="wrap_content"
    android:divider="@android:color/transparent"
    android:background="@drawable/card">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/folder_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Closed or Open"
            android:src="@drawable/ic_pages" />

        <TextView
            android:id="@+id/folder_item_title"
            android:layout_width="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:padding="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Folder Title this is a folder title that is way biger"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/folder_item_type"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/folder_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/folder_item_title"
            android:layout_toEndOf="@id/folder_item_type"
            android:padding="2dp"
            android:maxLines="4"
            android:maxLength="150"
            android:ellipsize="end"
            android:text="@string/dendro_configurations_description"
            />


        <TextView
            android:id="@+id/folder_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="2dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/folder_item_type"
            android:layout_below="@id/folder_item_description"
            android:textColor="@color/second_grey"
            android:text="12MB"
            />

        <TextView
            android:id="@+id/folder_item_date_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="end"
            android:layout_below="@id/folder_item_size"
            android:gravity="center_vertical"
            android:textColor="@color/second_grey"
            android:text="@string/modified"
            android:layout_marginEnd="2dp"
            android:padding="2dp"
            android:layout_toEndOf="@id/folder_item_type"
            />

        <TextView
            android:id="@+id/folder_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/second_grey"
            android:layout_gravity="right"
            android:layout_below="@id/folder_item_size"
            android:gravity="center_vertical"
            android:text="01-01-2015"
            android:padding="2dp"
            android:layout_toRightOf="@id/folder_item_date_desc"
            />




    </RelativeLayout>

</RelativeLayout>