<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <ImageView
                android:id="@+id/folder_item_type"
                android:contentDescription="@string/image_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_pages" />

            <TextView
                android:id="@+id/folder_item_title"
                android:layout_width="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:padding="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/folder_item_type"
                android:text="Favorite name"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/folder_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="2dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/folder_item_type"
                android:layout_below="@id/folder_item_title"
                android:textColor="@color/second_grey"
                android:text="12MB"
                />

            <TextView
                android:id="@+id/folder_item_date_desc"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_gravity="end"
                android:layout_below="@id/folder_item_size"
                android:gravity="center_vertical"
                android:textColor="@color/second_grey"
                android:text="@string/modified"
                android:layout_marginEnd="2dp"
                android:padding="2dp"
                android:layout_toEndOf="@id/folder_item_type"
                />

            <TextView
                android:id="@+id/folder_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/second_grey"
                android:layout_gravity="end"
                android:layout_below="@id/folder_item_size"
                android:gravity="center_vertical"
                android:text="01-01-2015"
                android:padding="2dp"
                android:layout_toEndOf="@id/folder_item_date_desc"
                />
        </RelativeLayout>
</android.support.v7.widget.CardView>