<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    card_view:cardCornerRadius="5dp"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_question"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_height="fill_parent"
                android:layout_width="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:background="@android:color/holo_red_dark"
                />

            <TextView
                android:id="@+id/form_item_question"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="0.98"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:textColor="@color/text_blue_grey_darker"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="Is this a question? because i really want to know if this is reaaaaally reaaaaaaly a question. Maybe mr saxobeat can help with this discovery."
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@id/ll_question"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >

            <TextView
                android:id="@+id/form_item_type"
                android:layout_alignParentTop="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/second_grey"
                android:text="Multiple Choice"
                />
            <TextView
                android:id="@+id/form_item_values"
                android:layout_below="@id/form_item_type"
                android:layout_marginTop="5dp"
                android:text="[ Yes, No, Maybe, Maybe not, I don't know ]"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>