<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/card"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/metadata_item_type"
        android:layout_alignParentLeft="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="6dip"
        android:contentDescription="Closed or Open"
        android:src="@drawable/ic_metadata"
        />

    <TextView
        android:id="@+id/metadata_item_title"
        android:text="Metadata Title"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"
        android:layout_marginTop="6sp"
        android:layout_toRightOf="@id/metadata_item_type"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/metadata_item_value"
        android:layout_toRightOf="@id/metadata_item_type"
        android:layout_below="@id/metadata_item_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:maxWidth="200dp"
        android:ellipsize="start"
        android:text="metadata value"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/metadata_item_date"
        android:layout_below="@id/metadata_item_value"
        android:layout_toRightOf="@id/metadata_item_type"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textColor="@color/second_grey"
        android:layout_width="wrap_content"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="2009/12/2"
        />

</RelativeLayout>
