<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_view_instructions_card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >

        <LinearLayout
            android:id="@+id/ll_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/form_name"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight="0.98"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/text_placeholder"
                />
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:fontFamily="sans-serif-thin"
                android:id="@+id/form_item_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                android:text="@string/text_placeholder"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:fontFamily="sans-serif-thin"
                android:drawablePadding="6dp"
                android:id="@+id/form_item_number_questions"
                android:layout_below="@id/form_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_view_headline_black_24dp"
                android:textColor="@color/primary"
                android:gravity="center"
                android:text="@string/text_placeholder"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:fontFamily="sans-serif-thin"
                android:drawablePadding="6dp"
                android:id="@+id/form_item_duration"
                android:layout_below="@id/form_item_description"
                android:layout_toEndOf="@id/form_item_number_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_query_builder_black_24dp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:text="@string/text_placeholder"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_form_list_expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/action_form_item_delete_cancel"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="@string/action_cancel"
                />

            <Button
                android:id="@+id/action_form_item_delete"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:text="@string/action_delete"
                />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>