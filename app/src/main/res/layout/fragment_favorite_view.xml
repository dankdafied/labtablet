<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray">

    <GridLayout
        android:id="@+id/gv_dataset_view_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="vertical"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:rowCount="6">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_marginTop="10dp"
            android:background="@drawable/card"
            android:padding="10dp"
            android:layout_column="0">


            <ImageButton
                android:id="@+id/favorite_view_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/desc_list_item_icon"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_edit" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_toLeftOf="@id/favorite_view_edit_title"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:background="@drawable/card"
            android:padding="10dp"
            android:layout_column="0">



            <ImageButton
                android:id="@+id/favorite_view_edit_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/desc_list_item_icon"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_edit" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/favorite_view_edit_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/favorite_view_no_description"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </RelativeLayout>

        <Button
            android:layout_width="fill_parent"
            style="@style/btnStyleBeige"
            android:layout_height="wrap_content"
            android:text="@string/launch_field_mode"
            android:id="@+id/bt_field_mode"
            android:drawableRight="@android:drawable/ic_menu_mapmode"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="fill_parent"
            android:text="@string/add_metadata"
            android:drawableRight="@android:drawable/ic_menu_add"
            style="@style/btnStyleBeige"
            android:id="@+id/bt_new_metadata"
            android:layout_marginTop="2dp"
            />

        <Button
            android:layout_column="0"
            android:layout_row="4"
            android:layout_width="fill_parent"
            android:text="@string/edit_metadata_records"
            android:drawableRight="@android:drawable/ic_menu_edit"
            style="@style/btnStyleBeige"
            android:id="@+id/bt_edit_metadata"
            android:layout_marginTop="2dp"
            />
    </GridLayout>


    <ListView
        android:id="@+id/lv_favorite_metadata"
        android:minHeight="30dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/gv_dataset_view_base" />


</RelativeLayout>