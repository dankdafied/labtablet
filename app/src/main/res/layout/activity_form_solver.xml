<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/rl_form_solver_intro"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/light_gray"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_solver_intro"
                android:padding="20dp"
                android:gravity="center"
                android:textSize="20sp"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/second_grey"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                />
            <Button
                android:id="@+id/bt_dismiss_form_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_ok"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                style="@android:style/Widget.Holo.Light.Button.Borderless.Small"
                />
        </LinearLayout>
    </LinearLayout>

    <Chronometer
        android:visibility="invisible"
        android:id="@+id/form_solver_chrono"
        android:background="@color/list_background_pressed"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_gravity="top|end"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        />

    <ScrollView
        android:id="@+id/sv_question_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="invisible"
        android:animateLayoutChanges="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_question_items"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bt_form_save"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ab_validate"/>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>