<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/changelog_item_type"
            android:layout_width="wrap_content"
            android:contentDescription="@string/image_placeholder"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_preview"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/changelog_item_title"
            android:layout_toEndOf="@id/changelog_item_type"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="100"
            android:layout_gravity="fill_horizontal"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6sp"
            android:layout_toRightOf="@id/changelog_item_type"
            android:layout_alignParentRight="true"
            android:text="Log title"
            />

        <TextView
            android:id="@+id/changelog_item_description"
            android:layout_below="@id/changelog_item_title"
            android:layout_toEndOf="@id/changelog_item_type"
            android:layout_alignParentEnd="true"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="Log description"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/changelog_item_type"
            />

        <TextView
            android:id="@+id/changelog_item_date"
            android:layout_below="@id/changelog_item_description"
            android:maxLines="1"
            android:maxLength="16"
            android:layout_marginTop="12dp"
            android:textColor="@color/second_grey"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="2015-02-30T15:52Z"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>